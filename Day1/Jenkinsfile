pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        AWS_CREDS  = credentials('lin-id')
        TF_DIR     = "Day1"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh "terraform init"
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    sh """
                        terraform plan \
                            -var="region=${AWS_REGION}" \
                            -var="bucket_name=shamlin-bucket-${BUILD_NUMBER}"
                    """
                }
            }
        }

        stage('Approval') {
            when {
                branch "main"
            }
            steps {
                script {
                    input message: "Approve Terraform Apply?"
                }
            }
        }

        stage('Terraform Apply') {
            when {
                branch "main"
            }
            steps {
                dir("${TF_DIR}") {
                    sh """
                        terraform apply -auto-approve \
                            -var="region=${AWS_REGION}" \
                            -var="bucket_name=shamlin-bucket-${BUILD_NUMBER}"
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
    }
}